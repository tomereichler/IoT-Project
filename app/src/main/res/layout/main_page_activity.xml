<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/background">


        <TextView
            android:id="@+id/textView"
            android:layout_width="417dp"
            android:layout_height="69dp"
            android:background="@drawable/button_design"
            android:gravity="center"
            android:text="Fit Guide"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-14dp"
            tools:layout_editor_absoluteY="-5dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            app:srcCompat="@drawable/fitguide" />

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:hint="Enter Height (cm)"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:hint="Enter Weight (kg)"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/goalEditText"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:hint="Enter Goal (calories)"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="10sp" />
        </LinearLayout>



        <Button
            android:id="@+id/weekly"
            android:layout_width="135dp"
            android:layout_height="54dp"
            android:background="@drawable/button_design"
            android:text="weekly progress"
            tools:ignore="MissingConstraints"
            android:layout_margin="8dp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="477dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/startsession"
            android:layout_margin="8dp"
            android:layout_width="135dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/button_design"
            android:text="start session"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="549dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>