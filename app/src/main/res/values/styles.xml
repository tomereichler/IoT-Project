<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CalendarDateStyle">
        <item name="android:textColor">#000000</item> <!-- Date text color -->
        <item name="android:textSize">16sp</item> <!-- Date text size -->
    </style>

    <style name="CalendarWeekDayStyle">
        <item name="android:textColor">#757575</item> <!-- Weekday text color -->
        <item name="android:textSize">14sp</item> <!-- Weekday text size -->
        <item name="android:textStyle">bold</item> <!-- Weekday text style (bold) -->
    </style>

</resources>
